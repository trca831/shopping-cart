<div style="text-align: center;">
<p style="color: green"><%= notice %></p>

<p>
<strong style="font-size: 36px;">
  <%= @product.name %>
</strong>
</p>

<p>
  <strong>Price:</strong>
  <%= @product.price %>
</p>

<p>
<%= image_tag url_for(@product.avatar), width: 150, height: 150  if @product.avatar.attached? %>
</p>

<p>
  <strong>Amount:</strong>
  <%= @product.amount %>
</p>

<div>
  <%= link_to "Edit", edit_product_path(@product), class: "btn btn-primary" %> |
  <%= link_to "Back", products_path, class: "btn btn-primary" %> |
  <%= link_to "Delete", @product, data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, class: "btn btn-primary" %>
</div>

</div>